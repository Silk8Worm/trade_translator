#:include backtest.kv

<Trade>:
    BoxLayout:
        orientation: 'vertical'

        BoxLayout:
            orientation: 'horizontal'

            BoxLayout:
                orientation: 'horizontal'

                Image:
                    source: 'logo.png'
                    size: self.texture_size
                    halign: 'left'
                    allow_stretch: True

                Label:
                    text: ''

            Label:
                text: 'Trade Translator'
                font_size: 60
                halign: 'left'

            BoxLayout:
                orientation: 'horizontal'
                Label:
                    text: ''

                Button:
                    text: 'Account'
                    font_size: 15
                    background_color: 0,.3,.8,1
                    halign: 'right'

                    on_release: root.account()

        GridLayout:
            cols: 2
            size_hint_y: None
            height: 550

            BoxLayout:
                orientation: 'vertical'
                padding: [30, 0, 15, 0]

                BoxLayout:
                    padding: [0,0,400,10]
                    Label:
                        text: 'Signal'
                        font_size: 24
                        size_hint_y: None
                        height: 40

                TextInput:
                    id: signal
                    multiline:False
                    font_size: 28

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Trade'
                    font_size: 18
                    halign: 'left'

                TextInput:
                    id: trade
                    multiline:False
                    font_size: 28

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Cover Signal'
                    font_size: 18
                    halign: 'left'

                TextInput:
                    id: cover_signal
                    multiline:False
                    font_size: 28

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Universe'
                    font_size: 18
                    halign: 'left'

                TextInput:
                    id: universe
                    multiline:False
                    font_size: 28

            BoxLayout:
                orientation: 'horizontal'

                BoxLayout:
                    orientation: 'vertical'

                    Label:
                        text: 'Take Profit'
                        font_size: 18
                        halign: 'left'

                    TextInput:
                        id: take_profit
                        multiline:False
                        font_size: 28

                BoxLayout:
                    orientation: 'vertical'

                    Label:
                        text: 'Stop Loss'
                        font_size: 18
                        halign: 'left'

                    TextInput:
                        id: stop_loss
                        multiline:False
                        font_size: 28

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Cover Trade'
                    font_size: 18
                    halign: 'left'

                TextInput:
                    id: cover_trade
                    multiline:False
                    font_size: 28

        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: 100

            Label:
                font_size: 18
            Label:
                font_size: 18

            BoxLayout:
                padding: [20,20,30,20]
                Button:
                    text: 'Backtest Case'
                    font_size: 18
                    background_color: 0,.3,.8,1

                    on_release: root.backtest_case(signal.text, trade.text, cover_signal.text, universe.text, take_profit.text, stop_loss.text, cover_trade.text)

            BoxLayout:
                padding: [30,20,20,20]
                Button:
                    text: 'Backtest'
                    font_size: 18
                    background_color: 0,.3,.8,1

                    on_release: root.backtest(signal.text, trade.text, cover_signal.text, universe.text, take_profit.text, stop_loss.text, cover_trade.text)
