#:include connected.kv
#:include login.kv

<SignUp>:
    BoxLayout
        id: login_layout
        orientation: 'vertical'
        padding: [10,50,10,50]
        spacing: 50

        Label:
            text: 'Create New Account'
            font_size: 32

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Email Address'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        Button:
            text: 'Create Account'
            font_size: 24

            on_press: root.create_account(login.text, password.text)

        Button:
            text: 'Return to Login'
            font_size: 24

            on_press: root.return_to_login()

