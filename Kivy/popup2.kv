<BackTestPopup>:
    title: 'Select Backtest Dates'
    size_hint: None, None
    size: (500, 300)

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: 'Pick First Date'

            BoxLayout:
                padding: [40,20,40,20]
                TextInput:
                    font_size: 23
                    id: first_date
                    hint_text: 'DD/MM/YYYY'
                    multiline: False

        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: 'Pick Second Date'

            BoxLayout:
                padding: [40,20,40,20]
                TextInput:
                    font_size: 23
                    id: second_date
                    hint_text: 'DD/MM/YYYY'
                    multiline: False

        BoxLayout:
            padding: [150,20,150,10]
            Button:
                text: 'Run Backtest'
                on_release: root.backtest(first_date.text, second_date.text)
                on_release: root.dismiss()


