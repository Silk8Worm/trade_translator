<BackTestPopup>:
    title: 'Select Backtest Dates'
    size_hint: None, None
    size: (500, 300)

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: 'Pick First Date'
                font_name: 'Fonts/Dosis-Light'
                font_size: 22

            BoxLayout:
                padding: [40,20,40,20]
                TextInput:
                    font_size: 23
                    id: first_date
                    hint_text: 'DD/MM/YYYY'
                    multiline: False

        BoxLayout:
            orientation: 'horizontal'

            Label:
                text: 'Pick Second Date'
                font_name: 'Fonts/Dosis-Light'
                font_size: 22

            BoxLayout:
                padding: [40,20,40,20]
                TextInput:
                    font_size: 23
                    id: second_date
                    hint_text: 'DD/MM/YYYY'
                    multiline: False

        BoxLayout:
            padding: [140,20,140,10]
            Button:
                text: 'Run Backtest'
                font_name: 'Fonts/DroidSans-Bold'
                font_size: 26
                on_release: root.backtest(first_date.text, second_date.text)
                on_release: root.dismiss()
                background_color: .65, .65, .65, 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
