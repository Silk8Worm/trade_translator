#:include signup.kv

<TradeTranslator>:
    BoxLayout:
        orientation: 'vertical'

        Label:

        BoxLayout:
            orientation: 'horizontal'

            Label:

            BoxLayout:
                pos_hint: {'center_y': 0.5}
                orientation: 'vertical'
                size_hint: None, None
                width: 250
                height: 370

                BoxLayout:
                    orientation: 'vertical'

                    Label:
                        font_name: 'Fonts\Times New Roman 400'
                        text: 'Trade Translator'
                        font_size: 45

                    Label:
                        text: 'Simplify your trading in minutes.'
                        font_size: 15

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:
                        padding: [-150,0,0,-10]
                        Label:
                            text: 'Email Address'
                            font_size: 15
                            halign: 'left'

                    TextInput:
                        id: signin
                        multiline:False
                        font_size: 17

                    BoxLayout:
                        size_hint_y: None
                        height: 15

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:
                        padding: [-180,0,0,-10]
                        Label:
                            text: 'Password'
                            halign: 'left'
                            font_size: 15

                    TextInput:
                        id: password
                        multiline:False
                        password:True
                        font_size: 17

                    BoxLayout:
                        size_hint_y: None
                        height: 15

                BoxLayout:
                    size_hint_y: None
                    height:10

                BoxLayout:
                    padding: [0,0,0,0]

                    orientation: 'vertical'
                    Button:
                        text: 'Sign In'
                        font_size: 15
                        background_color: [.2, .3647, .917647, 1]

                        on_release: root.do_signin(signin.text, password.text)

                    RelativeLayout:

                        Button:
                            text: "Don't have an account? Sign up."
                            pos_hint: {'center_x': 0.5}
                            size_hint: None, None
                            height: 20
                            width: 180
                            font_size: 12
                            background_color: [0,0,0,0]

                            on_release: root.do_signup(signin.text, password.text)

            Label:

        Label:
