#:include trade.kv

<TradeTranslator>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'Background_Images\signin_background.png'
    BoxLayout:
        orientation: 'vertical'

        Label:

        BoxLayout:
            orientation: 'horizontal'

            Label:

            BoxLayout:
                pos_hint: {'center_y': 0.5}
                orientation: 'vertical'
                size_hint: None, None
                width: 250
                height: 370

                BoxLayout:
                    orientation: 'vertical'

                    Label:
                        font_name: 'Fonts\Times New Roman 400'
                        text: 'Trade Translator'
                        font_size: 45

                    Label:
                        text: 'Simplify your trading in minutes.'
                        font_size: 15

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:
                        padding: [-150,0,0,-10]
                        Label:
                            text: 'Email Address'
                            font_size: 15
                            halign: 'left'

                    TextInput:
                        id: signin
                        hint_text: 'example@email.com'
                        multiline:False
                        font_size: 17

                    BoxLayout:
                        size_hint_y: None
                        height: 15

                BoxLayout:
                    orientation: 'vertical'

                    BoxLayout:
                        padding: [-180,0,0,-10]
                        Label:
                            text: 'Password'
                            halign: 'left'
                            font_size: 15

                    TextInput:
                        id: password
                        hint_text: 'Password'
                        multiline:False
                        password:True
                        font_size: 17

                    BoxLayout:
                        size_hint_y: None
                        height: 15

                BoxLayout:
                    size_hint_y: None
                    height:10

                BoxLayout:
                    padding: [0,10,0,40]

                    orientation: 'vertical'
                    Button:
                        text: 'Sign In'
                        font_size: 15
                        background_color: [.2, .3647, .917647, 1]

                        on_release: root.do_signin(signin.text, password.text)

            Label:

        Label:
