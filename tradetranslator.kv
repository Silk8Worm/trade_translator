#:include trade.kv
#:include signup.kv

<TradeTranslator>:
    BoxLayout:
        orientation: 'vertical'
        padding: [420,180,420,170]

        BoxLayout:
            spacing: -30
            orientation: 'vertical'

            Label:
                family_name: 'Arial'
                text: 'Trade Translator'
                font_size: 32

            Label:
                text: 'Simplify your trading in minutes.'
                font_size: 15

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 70

            BoxLayout
                padding: [545,0,0,0]

                Label:
                    text: 'Email Address'
                    font_size: 15
                    halign: 'left'
                    text_size: root.width-20, 20

            TextInput:
                id: signin
                multiline:False
                font_size: 17

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: 70

            BoxLayout
                padding: [545,0,0,0]

                Label:
                    text: 'Password'
                    halign: 'left'
                    font_size: 15
                    text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 17

        BoxLayout:
            orientation: 'vertical'
            padding: [0,30,0,0]
            Button:
                text: 'Sign In'
                font_size: 15
                background_color: [.2, .3647, .917647, 1]

                on_release: root.do_signin(signin.text, password.text)

            RelativeLayout:

                Button:
                    text: "Don't have an account? Sign up."
                    pos_hint: {'center_x': 0.5}
                    size_hint: None, None
                    height: 20
                    width: 180
                    font_size: 12
                    background_color: [0,0,0,0]

                    on_release: root.do_signup(signin.text, password.text)
