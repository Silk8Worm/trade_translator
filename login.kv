#:include trade.kv
#:include signup.kv

<Login>:
    BoxLayout:
        id: login_layout
        orientation: 'vertical'
        padding: [30,10,30,30]
        spacing: 50

        BoxLayout:
            orientation: 'vertical'
            spacing: 30

            Label:
                text: 'Trade Translator'
                font_size: 32

            Label:
                text: 'Simplify your trading in minutes.'
                font_size: 15

        BoxLayout:
            orientation: 'vertical'
            padding: [30,0,0,0]

            Label:
                text: 'Email Address'
                font_size: 18
                halign: 'left'
                text_size: root.width-20, 20

            TextInput:
                id: login
                multiline:False
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            padding: [30,0,0,0]

            Label:
                text: 'Password'
                halign: 'left'
                font_size: 18
                text_size: root.width-20, 20

            TextInput:
                id: password
                multiline:False
                password:True
                font_size: 28

        BoxLayout:
            orientation: 'vertical'
            spacing: 20
            padding: [50,0,50,0]
            Button:
                text: 'Sign In'
                font_size: 24
                background_color: 0,.3,.8,1

                on_release: root.do_login(login.text, password.text)
            BoxLayout:
                padding: [100,10,100,10]
                Button:
                    text: "Don't have an account? Sign up."
                    font_size: 14

                    on_release: root.do_signup(login.text, password.text)
